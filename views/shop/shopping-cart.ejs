<% include ../partials/header1 %>
<% if ((products) && (products != 0)) { %>
    <div class="row" style="padding-top: 120px">
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <ul class="list-group">
                <% products.forEach(function(products) { %>
                <li class="list-group-item">
                    <span class="badge"><%= products.qty %></span>
                    <strong><%= products.item.title %></strong>
                    <span class="label label-success">$<%= products.price %></span>
                    <div class="btn-group">
                        <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="/reduce/<%= products.item._id %>">Reduce by 1</a></li>
                            <li><a href="/remove/<%= products.item._id %>">Remove all</a></li>
                        </ul>
                    </div>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <strong>Total:<%= totalPrice %></strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <a href="/checkout" type="button" class="button btn btn-success">Checkout</a>
        </div>
    </div>
<% } else { %>
    <div class="row" style="padding-top:100px">
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <h2>No items in cart</h2>
        </div>
    </div>
<% } %>

<% include ../partials/footer %>